<idea-plugin>
    <id>io.github.tbm98.flutter_generator_snippets</id>
    <name>Flutter Generator Snippets</name>
    <vendor email="tbm98.dev@gmail.com" url="https://tbm98.dev">tbm98</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="dev.tbm98.flutterriverpodsnippets.services.MyApplicationService"/>
        <projectService serviceImplementation="dev.tbm98.flutterriverpodsnippets.services.MyProjectService"/>
        <defaultLiveTemplates file="/liveTemplates/Flutter_riverpod_snippets.xml"/>
        <liveTemplateContext implementation="dev.tbm98.flutterriverpodsnippets.FlutterContext" />
    </extensions>

    <applicationListeners>
        <listener class="dev.tbm98.flutterriverpodsnippets.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
